<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    tools:context=".CreateAdvertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_type"
            android:textSize="16sp"
            android:textColor="@color/text_primary" />

        <RadioGroup
            android:id="@+id/radioPostType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lost"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/radioFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/found"
                android:textColor="@color/text_primary" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/item_name"
            android:text="@string/sample_item_name"
            android:textColor="@color/text_field_color"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/contact_phone_number"
            android:text="@string/sample_item_owner_phone"
            android:textColor="@color/text_field_color"
            android:inputType="phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_background"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/item_description"
            android:text="@string/sample_item_description"
            android:textColor="@color/text_field_color"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/date_lost_found"
            android:text="@string/sample_item_date"
            android:textColor="@color/text_field_color"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/where_lost"
            android:text="@string/sample_location"
            android:textColor="@color/text_field_color"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_gradient"
            android:padding="15dp"
            android:text="@string/save"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>